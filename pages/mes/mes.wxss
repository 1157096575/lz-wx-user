.infolist{
    background: white;
    height: 120rpx;
    display: flex;
}
.headimg{
    width: 15%;
    height: 97rpx;
    margin-top: 11rpx;
    margin-left: 30rpx;
}
.headimg>image{
    width: 97rpx;
    height: 97rpx;
    
}
.tinfo{
    width: 80%;
    height: 100%;
    border-bottom: solid 1rpx #E1E1E1;
    margin-left: 30rpx;
}
.tcont{
    height: 50%;
    width: 95%;
    line-height: 60rpx;
    display: flex;
    justify-content:space-between;
}
.name{
    font-size: 30rpx;
    color: #333333;
    width: 40%;
    text-overflow:ellipsis; 
    white-space:nowrap;
    overflow:hidden;
    
}
.xt{
    color: #00BBFF;
}
.mesg,.time{
    font-size: 24rpx;
    color: #999999;
}
.num{
    display: inline-block;
    width: 41rpx;
    height: 35rpx;
    background-color: #FF2C00;
    color: white;
    text-align: center;
    line-height: 35rpx;
    border-radius: 20rpx;
}
